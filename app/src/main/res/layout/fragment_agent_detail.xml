<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.AgentDetailFragment"
    android:background="@color/design_default_color_primary">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:contentScrim="@color/design_default_color_primary">
            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:alpha="0.1"/>
            <ImageView
                android:id="@+id/portraitAgent"
                android:layout_width="295dp"
                android:layout_height="400dp"
                android:layout_gravity="center_vertical|end"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_layout_background"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/agentIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:transitionName="big_icon"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/design_default_color_primary"
                app:layout_constraintStart_toStartOf="@id/ability_icon_1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/agentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:layout_constraintTop_toTopOf="@+id/agentIcon"
                app:layout_constraintBottom_toBottomOf="@id/agentIcon"
                app:layout_constraintStart_toEndOf="@id/agentIcon"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="18dp"
                tools:text="Name" />
            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?attr/dividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/agentIcon"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/biographyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="//BIOGRAPHY"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@id/agentIcon"
                app:layout_constraintTop_toBottomOf="@id/divider_name"/>
            <TextView
                android:id="@+id/agent_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/agentIcon"
                app:layout_constraintTop_toBottomOf="@id/biographyTitle"
                tools:text="Name" />
            <View
                android:id="@+id/divider_desc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?attr/dividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/agent_desc"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/abilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="//SPECIAL ABILITIES"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="@id/agent_desc"
                app:layout_constraintTop_toBottomOf="@id/divider_desc"/>
            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/abilityTitle"
                app:constraint_referenced_ids="ability_icon_1, ability_icon_2, ability_icon_3, ability_icon_4"
                app:flow_wrapMode="aligned"/>
            <ImageView
                android:id="@+id/ability_icon_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:padding="8dp"
                android:background="@color/design_default_color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/ability_icon_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:padding="8dp"
                android:background="@color/design_default_color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/ability_icon_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:padding="8dp"
                android:background="@color/design_default_color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/ability_icon_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:padding="8dp"
                android:background="@color/design_default_color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/ability_name_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ability_icon_1"
                app:layout_constraintEnd_toEndOf="@id/ability_icon_1"
                app:layout_constraintTop_toBottomOf="@+id/ability_icon_1"
                android:textAlignment="center"
                tools:text="Name Name Name" />
            <TextView
                android:id="@+id/ability_name_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ability_icon_2"
                app:layout_constraintEnd_toEndOf="@id/ability_icon_2"
                app:layout_constraintTop_toBottomOf="@+id/ability_icon_2"
                android:textAlignment="center"
                tools:text="Name Name Name" />
            <TextView
                android:id="@+id/ability_name_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ability_icon_3"
                app:layout_constraintEnd_toEndOf="@id/ability_icon_3"
                app:layout_constraintTop_toBottomOf="@+id/ability_icon_3"
                android:textAlignment="center"
                tools:text="Name Name Name" />
            <TextView
                android:id="@+id/ability_name_4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/ability_icon_4"
                app:layout_constraintEnd_toEndOf="@id/ability_icon_4"
                app:layout_constraintTop_toBottomOf="@+id/ability_icon_4"
                android:textAlignment="center"
                tools:text="Name Name Name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>